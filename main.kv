<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0

<Menu>:

    algorithm: alg_label
    start_button: start_button
    stop_button: stop_button
    wall_button: wall_button
    rubber_button: rubber_button
    diagonal_move_btn: diagonal_move_btn

    GridLayout: #upper window
        rows:   2
        size:   root.width, root.height
        BackgroundLabel:  #title
            text:   "PATHFINDER"
            font_size:  40
            italic: True
            bold:   True
            background_color:   0.3, 0.1, 0.3, 1

        GridLayout: #menu
            cols:   3

            GridLayout: #algorithm selection
                rows:   2

                Label:
                    id: alg_label
                    text: "none"

                GridLayout:
                    cols:   3

                    Button:
                        text:   "prev"
                        on_press:   app.prev()

                    Button:
                        text:   "next"
                        on_press:   app.next()

                    Button:
                        id: diagonal_move_btn
                        text:   "diagonal move"
                        multiline:  True
                        on_press:   app.diagonal_move()

            GridLayout: #blocks selection
                cols:   2
                rows:   2
                Button:
                    id: start_button
                    text:   "start point"
                    on_press:   app.start_point()
                Button:
                    id: stop_button
                    text:   "stop point"
                    on_press:   app.stop_point()
                Button:
                    id: wall_button
                    text:   "wall"
                    on_press:   app.wall()
                Button:
                    id: rubber_button
                    text:   "rubber"
                    on_press:   app.rubber()

            GridLayout: #start/stop

                rows:2
                GridLayout:
                    cols:   2
                    Button:
                        text:   "start"
                        on_release:   app.start()
                    Button:
                        text:   "clear"
                        on_press:   app.clear()
                Button:
                    text:   "exit"
                    on_press:   app.exit()

